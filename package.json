{
  "name": "cfl-electron-react-starter-typescript",
  "version": "0.0.1",
  "license": "MIT",
  "description": "Boilerplate for electron app with react.",
  "author": {
    "name": "Crofters Food Ltd."
  },
  "main": "electron-main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start-web": "vite",
    "start-electron": "npm run build-electron && electron ./",
    "build-web": "tsc && vite build",
    "build-electron": "tsc --project tsconfig.electron.json",
    "build": "npm run build-web && npm run build-electron",
    "pack-app": "npm run build && electron-builder --dir",
    "dist-app": "npm run build && electron-builder"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-serve": "^1.1.0",
    "primeicons": "^4.1.0",
    "primereact": "^6.6.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-transition-group": "^4.4.2",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@types/node": "^16.10.2",
    "@types/react": "^17.0.15",
    "@types/react-dom": "^17.0.9",
    "@types/react-router-dom": "^5.1.8",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "@vitejs/plugin-react-refresh": "^1.3.5",
    "autoprefixer": "^10.3.1",
    "electron": "^15.0.0",
    "electron-builder": "^22.11.7",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-react": "^7.24.0",
    "postcss": "^8.3.6",
    "prettier": "^2.3.2",
    "tailwindcss": "^2.2.7",
    "typescript": "^4.3.5",
    "vite": "^2.4.3"
  },
  "build": {
    "appId": "com.croftersorganic.electronreactboilerplate",
    "productName": "CFL Electron Boilerplate App",
    "asar": true,
    "files": [
      "!.eslintrc.js",
      "!.prettierrc.js",
      "!postcss.config.js",
      "!tailwind.config.js",
      "!tsconfig.electron.json",
      "!tsconfig.json",
      "!vite.config.ts",
      "!electron-main.ts",
      "!electron-preloader.ts",
      "!src/",
      "build/**/*",
      "electron-main.js",
      "electron-preloader.js"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "pkg"
    }
  }
}
